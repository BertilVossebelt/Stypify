<UserControl x:Class="TypingApp.Views.GroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypingApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="780" Fill="#FFE82020"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="298,55,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFD07FCD"/>
        <Label Content="{Binding BoundNumber, Mode=TwoWay}" HorizontalAlignment="Left" Margin="353,55,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFD07FCD"/>

    </Grid>
</UserControl>
