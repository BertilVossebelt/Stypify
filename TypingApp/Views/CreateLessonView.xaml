<UserControl x:Class="TypingApp.Views.CreateLessonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypingApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style x:Key="_ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="_Border"
                                Padding="2"
                                SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="#00FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </UserControl.Resources>
    <StackPanel>
        <Border Height="150" Width="350" Margin="0,50,0,0" BorderBrush="#994698" CornerRadius="6" BorderThickness="4">
            <StackPanel Orientation="Horizontal" Background="#f5ddfd">
                <Border Width="100" BorderBrush="#994698" CornerRadius="6" BorderThickness="2" Margin="-2,-2,-2,-2">
                    <Label HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="35" Margin="0,0,0,5" Content="test" FontSize="20" Foreground="Black" FontWeight="Normal" />
                </Border>
                    
                <StackPanel Margin="25,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                    <TextBox TextWrapping="Wrap" Text="TextBox" Width="200" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Stretch" FontSize="18" Height="30"/>
                    <Button Width="200" Height="35" Margin="0,10,0,0" Content="Afbeelding Toevoegen" Background="#994698" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,5,0,5">
            <Button Height="25" Width="75" Background="#994698" Content="Opslaan" />
            <Button Height="25" Width="75" Margin="5,0,0,0" Command="{Binding Test}" Background="#FFD4C6C6" Content="Cancel" FontSize="12"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Height="10" Width="1150">
            <Line Stretch="Fill" Stroke="Gray" X2="1" Height="10" StrokeDashArray="2 2" />
        </StackPanel>
        <WrapPanel Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center">

            <ScrollViewer VerticalScrollBarVisibility="Visible" 
                          Height="250" HorizontalScrollBarVisibility="Hidden">

                <ListBox Name="ListBox1" ItemsSource="{Binding Exercises}"
                         SelectionMode="Multiple" 
                         SelectedItem="{Binding SelectedExercises}"
                         BorderBrush="Transparent" 
                         Background="Transparent"
                         ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" 
                         SelectedIndex="2"
                         HorizontalContentAlignment="Stretch">
                    
                    
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ExerciseBorderItem" 
                                        BorderThickness="1"
                                        BorderBrush="Purple"
                                        CornerRadius="7"
                                        Height="100"
                                        VerticalAlignment="Top"
                                        Padding="10">
                                <Border.Background>
                                    <SolidColorBrush Color="#EFDEFE"/>
                                </Border.Background>

                                <StackPanel Width="300">
                                    <TextBlock Text="{Binding Path=Name}" 
                                               Margin="0, 0, 0 , 7" 
                                               FontSize="20" />
                                    <TextBlock Text="{Binding Path=Text}"/>
                                    <TextBlock Text="Aantal karakters: 35" 
                                               Margin="0, 7, 0 , 0" 
                                               HorizontalAlignment="Right"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger 
                                         Binding="{Binding 
                                                     RelativeSource={RelativeSource 
                                                     Mode=FindAncestor, 
                                                     AncestorType={x:Type ListBoxItem}}, 
                                                     Path=IsSelected}" 
                                         Value="True">
                                    <Setter 
                                             TargetName="ExerciseBorderItem"
                                             Property="BorderBrush" 
                                             Value="Purple" />
                                    <Setter
                                        TargetName="ExerciseBorderItem" 
                                        Property="BorderThickness"
                                        Value="6" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </WrapPanel>
    </StackPanel>
</UserControl>
